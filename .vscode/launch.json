{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            
        },
        {
            "name": "Python:Streamlit ActasR main_chatbot",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "args": [
                 "run",
                 "src/main_chatbot.py"
            ]
        },
        {
            "name": "Python debug: ActasR main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",  // Opcional: Define el directorio de trabajo desde el que se lanza el script
            "justMyCode": false
        },
        {
            "name": "Python debug: ActasR main_workflow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main_workflow.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",  // Opcional: Define el directorio de trabajo desde el que se lanza el script
            "justMyCode": false,
    
        },
        {
            "name": "Debug Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
              "tests/unit/utils/llm_manager_test.py"  // o tu archivo de test
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}